{
  "registry": "leadstec",
  "image": "tomcat",
  "version": "",
  "build": "",
  "schema": "20181204",
  "lcs_schema": "1.6.0",
  "permissions": [
    {
      "chmod": "755",
      "chown": "tomcat",
      "path": "${TOMCAT_LOG_DIR}"
    }
  ],
  "envs": [
    {
      "name": "TOMCAT_ADMIN",
      "default": "admin",
      "replacements": [
        {
          "pattern": "{{TOMCAT_ADMIN}}",
          "path": "${CATALINA_HOME}/conf/tomcat-users.xml",
          "type": "1"
        }
      ]
    },
    {
      "name": "TOMCAT_ADMIN_PASS",
      "default": "{{TOMCAT_ADMIN_PASS_SECRET}}",
      "replacements": [
        {
          "pattern": "{{TOMCAT_ADMIN_PASS}}",
          "path": "${CATALINA_HOME}/conf/tomcat-users.xml",
          "type": "1"
        }
      ]
    }

  ],
  "secrets": [
    {
      "file": "/run/secrets/deploy",
      "required": false,
      "replacements": [
        {
          "name": "TOMCAT_ADMIN_PASS",
          "section": "tomcat",
          "pattern": "{{TOMCAT_ADMIN_PASS_SECRET}}",
          "path": "${CATALINA_HOME}/conf/tomcat-users.xml"
        }
      ]
    }
  ],
  "storages": [
    {
      "type": "1",
      "chown": "tomcat",
      "path": "${CATALINA_HOME}/conf/tomcat-users.xml",
      "base": "tomcat"
    }
  ]
}
